
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id    Int     @id @default(autoincrement())
  title String
  content  String?
  categoryId  Int
  createdAt  DateTime   @default(now())

  category  Category @relation(fields: [categoryId], references: [id])
}

model Category {
  id    Int  @id @default(autoincrement())
  name  String @unique
  posts Post[]
}
